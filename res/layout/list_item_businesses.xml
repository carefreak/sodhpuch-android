<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/list_item_businesslist_bg_normal"
    android:cacheColorHint="@android:color/transparent"
    android:orientation="horizontal"
    android:paddingBottom="4dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="4dp" >

        <ImageView
            android:id="@+id/album_icon"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/blank" >
        </ImageView>

        <TextView
            android:id="@+id/tvBusinessName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dip"
            android:layout_toRightOf="@+id/album_icon"
            android:textColor="#F9690E"
            android:textStyle="bold" >
        </TextView>

        <RelativeLayout
            android:id="@+id/phone_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBusinessName"
            android:layout_toRightOf="@+id/album_icon"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/center_point"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"
                android:orientation="horizontal" />
            
            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="20dip"
                android:layout_toLeftOf="@id/center_point"
                android:layout_alignParentLeft="true"
                android:autoLink="all"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_ctx_phone"
                android:gravity="center"
                android:textColor="@android:color/darker_gray" >
            </TextView>
            <TextView
                android:id="@+id/tvMobile"
                android:layout_width="wrap_content"
                android:layout_height="20dip"
                android:layout_toRightOf="@id/center_point"
                
                android:autoLink="all"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_action_phone"
                android:gravity="center"
                android:textColor="@android:color/darker_gray" >
            </TextView>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_below="@id/phone_content"
            android:layout_marginLeft="4dip"
            android:layout_toRightOf="@+id/album_icon"
            android:drawableLeft="@drawable/ic_ctx_place"
            android:gravity="center"
            android:textColor="#c14117" >
        </TextView>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/btnProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_action_next_item" />

</RelativeLayout>